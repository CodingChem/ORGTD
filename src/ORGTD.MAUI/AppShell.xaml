<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ORGTD.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ORGTD.MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarForegroundColor="Red"
    Shell.TabBarUnselectedColor="Green"
    Shell.TabBarTitleColor="Blue"
    Title="ORGTD.MAUI">
    <TabBar>
        <Tab Title="Journal" Icon="MauiIcon">
            <ShellContent
        ContentTemplate="{DataTemplate local:JournalPage}"
        Route="JournalPage" />
        </Tab>
        <Tab Title="Notes" Icon="MauiIcon">
            <ShellContent
        ContentTemplate="{DataTemplate local:NotesPage}"
        Route="NotesPage" />
        </Tab>
        <Tab Title="Tasks" Icon="MauiIcon">
            <ShellContent
        ContentTemplate="{DataTemplate local:TasksPage}"
        Route="TasksPage" />
        </Tab>
        <Tab Title="Agenda" Icon="MauiIcon">
            <ShellContent
        ContentTemplate="{DataTemplate local:AgendaPage}"
        Route="AgendaPage" />
        </Tab>
    </TabBar>


</Shell>
